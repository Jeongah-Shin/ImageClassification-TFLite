<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.jeongari.mask_or_not.camera.AutoFitFrameLayout
            android:id="@+id/layoutFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <com.jeongari.mask_or_not.camera.AutoFitTextureView
                android:id="@+id/textureView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <com.jeongari.mask_or_not.ClassifierDrawView
            android:id="@+id/classifierDrawView"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.jeongari.mask_or_not.camera.AutoFitFrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/camera_height_bottom_layout"
            app:layout_constraintTop_toBottomOf="@+id/layoutFrame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/white">
        <ImageView
            android:id="@+id/tvState"
            app:layout_constraintLeft_toLeftOf="@+id/bottomLayout"
            app:layout_constraintRight_toRightOf="@+id/bottomLayout"
            app:layout_constraintTop_toTopOf="@id/bottomLayout"
            android:layout_width="100dp"
            android:layout_height="120dp"/>
        <TextView
            android:id="@+id/tvResult"
            android:text="result"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/bottomLayout"
            android:textColor="@android:color/background_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>